# Variables
NAME = libft.a
CC = gcc
CFLAGS = -Wall -Wextra -Werror
SRCS = ft_atoi.c ft_bzero.c ft_calloc.c ft_isalnum.c ft_isalpha.c ft_isascii.c \
       ft_isdigit.c ft_isprint.c ft_itoa.c ft_memcpy.c ft_memmove.c ft_memset.c \
       ft_memchr.c ft_memcmp.c ft_putchar_fd.c ft_putstr_fd.c ft_putendl_fd.c \
       ft_putnbr_fd.c ft_strchr.c ft_strdup.c ft_strlen.c ft_strlcat.c \
       ft_strlcpy.c ft_split.c ft_strncmp.c ft_strnstr.c ft_strrchr.c \
       ft_strjoin.c ft_strtrim.c ft_substr.c ft_tolower.c ft_toupper.c \
       ft_strmapi.c
OBJS = $(SRCS:.c=.o)

# Rules
all: $(NAME)

$(NAME): $(OBJS)
	ar rcs $(NAME) $(OBJS)
	@echo "La libreria $(NAME) Ã¨ stata creata correttamente"

clean:
	rm -f $(OBJS)
	@echo "File OBJ puliti"

fclean: clean
	rm -f $(NAME)
	@echo "Pulizia completa"

re: fclean all
